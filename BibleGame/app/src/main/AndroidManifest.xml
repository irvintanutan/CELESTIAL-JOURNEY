<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesis.biblegame">

    <application
        android:name=".ui.login.AppObject"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.login.WorldMapActivity"></activity>
        <activity android:name=".ui.login.StoryLineActivity" />
        <activity android:name=".ui.login.HowToPlayActivity" />
        <activity
            android:name=".ui.login.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ui.login.LeaderBoardActivity" />
        <activity android:name=".ui.login.GameActivity" />
        <activity android:name=".ui.login.MapActivity" />
        <activity android:name=".ui.login.Menu" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.login.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="co.chatsdk.ui.login.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".ui.login.BackgroundSoundService"
            android:enabled="true"
            android:stopWithTask="true" />
    </application>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>